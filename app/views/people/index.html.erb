<style type="text/css">
    #title {display:inline-block;margin-right:10px;} 
    #signout {display:inline-block;float:right;} 
</style>

<div id="title">
    <h1>Women in Economics: Members and Alumni</h1>
</div>
<div id="signout">
    <h3><%= link_to "Sign Out", destroy_admin_session_path %><h3>
</div>

<table>
  <thead>
    <tr>
      <th>| First Name |</th>
      <th> Last Name |</th>
      <th>Class Year |</th>
      <th>Email |</th>
      <th>Phone Number |</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.class_year %></td>
        <td><%= person.email %></td>
        <td><%= person.phone_number %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Remove', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Person', new_person_path %>
<br>
<%= link_to 'Start Event', new_event_path %>
<br>
<%= link_to 'Event List', events_path %>
<br>
<%= link_to 'Participation List', participations_path %>
