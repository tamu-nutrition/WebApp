<%= render partial: "partials/navbar", locals: {loggedIn: true, page:"event_list"} %>
<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Event ID</th>
      <th>Event Name</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_id %></td>
        <td><%= event.event_name %></td>
        <td><%= event.event_date %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Start', new_participation_path(event: event) %></td>
        <td><%= link_to 'Remove', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
