<%= render partial: "partials/navbar", locals: {loggedIn: true, page:"participation_list"} %>
<h1 style="text-align:center">Participations</h1>

<table>
  <thead>
    <tr>
      <th>Event ID</th>
      <th>UIN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participations.each do |participation| %>
      <tr>
        <td><%= participation.event_id %></td>
        <td><%= participation.uin %></td>
        <td><%= link_to 'Show', participation %></td>
        <td><%= link_to 'Edit', edit_participation_path(participation) %></td>
        <td><%= link_to 'Remove', participation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
