<%= render partial: "partials/navbar", locals: {loggedIn: false, page:"meeting_participations"} %>

<h1>Meeting Participations</h1>

<%= form_with url: "/meeting_participations", method: :get do |form| %>
  <%= form.label :id, "Meeting ID:" %>
  <%= form.text_field :id %>
  <%= form.submit "Show Participation" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Meeting</th>
      <th>UIN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meeting_participations.each do |meeting_participation| %>
      <tr>
        <td><%= meeting_participation.meeting_name %></td>
        <td><%= meeting_participation.UIN %></td>
        <td><%= link_to 'Show', meeting_participation %></td>
        <td><%= link_to 'Edit', edit_meeting_participation_path(meeting_participation) %></td>
        <td><%= link_to 'Destroy', meeting_participation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meeting Participation', new_meeting_participation_path %>