<style type="text/css">
    #title {display:inline-block;margin-right:10px;} 
    #signout {display:inline-block;float:right;} 
</style>
<%= render partial: "partials/navbar", locals: {loggedIn: true, page:"request_list"} %>

<h1>Requests#index</h1>
<p>Find me in app/views/requests/index.html.erb</p>

<table>
  <thead>
    <tr>
      <th>| Event ID |</th>
      <th>UIN |</th>
      <th>Date of Request |</th>
      <th>Points |</th>
      <th>Requst Type |</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.event_id %></td>
        <td><%= request.uin %></td>
        <td><%= request.date %></td>
        <td><%= request.points %></td>
        <td><%= request.request_type %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Remove', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Add Request', new_request_path %>
