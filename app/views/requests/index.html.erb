<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Uin</th>
      <th>Date of request</th>
      <th>Points requested</th>
      <th>Request time</th>
      <th>Approved</th>
      <th>Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.event_id %></td>
        <td><%= request.UIN %></td>
        <td><%= request.date_of_request %></td>
        <td><%= request.points_requested %></td>
        <td><%= request.request_time %></td>
        <td><%= request.approved %></td>
        <td><%= request.id %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

