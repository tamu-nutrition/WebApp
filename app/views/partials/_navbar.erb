<style>

.flash__alert {
    color: #721c24;
    background-color: #f8d7da;
    border-color: #f5c6cb;
}
.flash__notice {
    color: #004085;
    background-color: #cce5ff;
    border-color: #b8daff;
}
.flash__warning {
    color: #856404;
    background-color: #fff3cd;
    border-color: #ffeeba;
}

.flash__success {
    color: #155724;
    background-color: #d4edda;
    border-color: #c3e6cb;
}
.alert {
  border-radius: 0px;
  margin: 2px 0px;
}

</style>
<% if flash.any? %>
    <% flash.each do |key, value| -%>
    <section class="alert flash flash__<%= key %>"><%= value.html_safe %></section>
    <% end -%>
<% end %>

<br />

<script>
// Adding active highlight
// active
$( document ).ready(function() {
  if (window.location.href.toLowerCase().endsWith("about.html")) {
    $( "#a-Help" ).addClass( "active" );
  }
  if (window.location.href.toLowerCase().endsWith("meeting_participations")) {
    $( "#a-Participation_List" ).addClass( "active" );
  }
  if (window.location.href.toLowerCase().endsWith("meetings")) {
    $( "#a-Meetings" ).addClass( "active" );
  }
  if (window.location.href.toLowerCase().endsWith("other_events")) {
    $( "#a-Event_List" ).addClass( "active" );
  }
  if (window.location.href.toLowerCase().endsWith("requests")) {
    $( "#a-Point_Request" ).addClass( "active" );
  }
  if(window.location.pathname == "/students") {
    $( "#a-Dashboard" ).addClass( "active" );
  }
  if(window.location.pathname == "/officers") {
    $( "#a-Officers" ).addClass( "active" );
  }
});

</script>
